FROM tha2015/helloworld
#WORKDIR /usr/src/app
RUN pip install opentelemetry-api==1.2.0
RUN pip install opentelemetry-sdk==1.2.0
RUN pip install opentelemetry-instrumentation==0.21b0 
RUN pip install opentelemetry-distro==0.21b0
RUN pip install opentelemetry-exporter-jaeger==1.2.0
RUN pip install opentelemetry-exporter-zipkin==1.2.0
RUN pip install opentelemetry-exporter-otlp==1.2.0
#  opentelemetry-bootstrap is from above opentelemetry-instrumentation package
RUN opentelemetry-bootstrap --action=install
COPY server2.py .
